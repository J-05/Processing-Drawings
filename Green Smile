void setup(){
  background(210,210,210);
  size(1500,1000);
}

void draw(){
  //face
  fill(0,255,0);
  stroke(0,0,0);
  strokeWeight(5);
  ellipse(750,500,750,750);
  //eyes
  strokeWeight(2);
  fill(255,255,255);
  ellipse(600,400,150,75);
  ellipse(900,400,150,75);
  fill(0,0,0);
  ellipse(600,400.5,40,40);
  ellipse(900,400.5,40,40);
  //mouth
  fill(255,0,0);
  arc(750,600,500,300,0,PI,CHORD);
}
